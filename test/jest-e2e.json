{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "module": "nodenext",
        "moduleResolution": "nodenext"
      }
    }
  },
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"]
}
